<Window x:Class="Czytam.Views.ChooseAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Czytam.Views"
        mc:Ignorable="d"
        Icon="/Resources/Images/man.png"
        Title="Wybierz konto" MinHeight="800" MinWidth="1000"
        WindowStartupLocation="CenterScreen" WindowState="Maximized" ResizeMode="CanResize">
    <Grid Style="{StaticResource generalGrid}">
        <Label Style="{StaticResource titleLabel}" Content="Wybierz konto" />

        <ScrollViewer VerticalContentAlignment="Center" VerticalScrollBarVisibility="Auto" Height="500" Width="330" Margin="0,50,0,0" VerticalAlignment="Center">
        <StackPanel x:Name="usersButtonsStackPanel" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" Width="300"/>
       </ScrollViewer>

        <Button Style="{StaticResource backButton}" Click="MainMenu" />
        
    </Grid>
</Window>