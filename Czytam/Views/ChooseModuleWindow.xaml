<Window x:Class="Czytam.Views.ChooseModuleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Czytam.Views"
        mc:Ignorable="d"
        Icon="/Resources/Images/man.png"
        Title="Wybierz moduł" MinHeight="800" MinWidth="1000"
        WindowStartupLocation="CenterScreen" WindowState="Maximized" ResizeMode="CanResize">
    <Grid Style="{StaticResource generalGrid}">
        <Label Style="{StaticResource titleLabel}" Content="Wybierz moduł "/>
        <Button Style="{StaticResource generalButton}" Content="Lekcje" Margin="0,-200,0,0" RenderTransformOrigin="0.952,0.457" Click="ChooseLessonButton_Click"/>
        <Button Style="{StaticResource generalButton}" Content="Ćwiczenia" Margin="0,100,0,0" Click="ChooseExerciseButton_Click" />
        <Button Style="{StaticResource backButton}" Content="Wyjście" Click="ExitButton_Click" />
        <Button Style="{StaticResource changeAccountButton}" Click="ChangeAccountButton_Click" />
        

    </Grid>
</Window>
