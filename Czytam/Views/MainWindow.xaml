<Window x:Class="Czytam.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Czytam"
        mc:Ignorable="d"
        Icon="/Resources/Images/man.png"
        Title="Poczytajmy! Aplikacja wspomagająca naukę czytania metodą sylabową." MinHeight="800" MinWidth="1000"
        WindowStartupLocation="CenterScreen" WindowState="Maximized" ResizeMode="CanResize">
    <Grid Style="{StaticResource generalGrid}">

        <Button Style="{StaticResource generalButton}" x:Name="chooseAccountButton" Content="Wybierz konto" Margin="0,150,0,0" Click="ChooseAccountButton_Click" RenderTransformOrigin="0.952,0.457" IsEnabled="False" Visibility="Hidden"/>

        <Button Style="{StaticResource generalButton}" Content="Dodaj konto" Margin="0,-150,0,0" Click="AddNewUserButton_Click" />
        
        <Label Style="{StaticResource titleLabel}" Content="Poczytajmy!"/>

    </Grid>
</Window>
