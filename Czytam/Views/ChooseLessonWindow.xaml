<Window x:Class="Czytam.Views.ChooseLessonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Czytam.Views"
        Icon="/Resources/Images/man.png"
        mc:Ignorable="d"
        Title="Wybierz lekcję" Height="800" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Images/3438857.jpg"/>
        </Grid.Background>

        <Label Style="{StaticResource titleLabel}" Content="Wybierz lekcję"/>

        <Button Style="{StaticResource backButton}" Click="BackButton_Click" />

        <ScrollViewer VerticalContentAlignment="Center" VerticalScrollBarVisibility="Auto" Height="500" Width="330" Margin="0,50,0,0" VerticalAlignment="Center">
            <StackPanel x:Name="lessonsButtonsStackPanel" HorizontalAlignment="center" Margin="0,0,0,0" VerticalAlignment="center" Width="300" />
        </ScrollViewer>


    </Grid>
</Window>
